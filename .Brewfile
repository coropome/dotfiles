# インストール先の指定
cask_args appdir: "/Applications"

# 外部ライブラリをインストール
tap "homebrew/core"
tap "homebrew/cask"

# デスクトップアプリケーションの管理
cask "visual-studio-code"
cask "google-chrome"
cask "docker"
cask "postman"
cask "drawio"
cask "aws-cli"
cask "azure-cli"
cask "ffmpeg"
